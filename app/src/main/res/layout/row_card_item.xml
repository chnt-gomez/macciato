<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_credit_card_white_24dp"
        android:tint="@color/colorPrimary"
        android:padding="@dimen/default_margin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/img_card"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:padding="@dimen/default_margin"
        android:text="@string/remaining_days_to_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_credit_card_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_card" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_card_debt"
        android:id="@+id/pb_remaining"
        android:progress="75"
        android:paddingEnd="@dimen/default_margin"
        android:paddingStart="@dimen/default_margin"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/img_card" />

    <TextView
        android:padding="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_card_debt"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>